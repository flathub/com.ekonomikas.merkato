{
    "app-id" : "com.ekonomikas.merkato",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "merkato",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-config/environment.d:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python-deps.json",
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag" : "v0.14.0"
                }
            ]
        },
        {
            "name" : "com.ekonomikas.merkato",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sheep-farm/merkato.git",
                    "commit" : "123581192f8854a26d029f9aa9e0b1756d341bbb"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
