{
    "app-id" : "com.ekonomikas.merkato",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "merkato",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
          "name": "python-dependencies",
          "buildsystem": "simple",
          "build-commands": [
            "pip3 install --prefix=/app --no-cache-dir pandas",
            "pip3 install --prefix=/app --no-cache-dir requests",
            "pip3 install --prefix=/app --no-cache-dir requests-futures",
            "pip3 install --prefix=/app --no-cache-dir yahooquery"
          ]
        },
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "cleanup" : [
                "*"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag" : "v0.14.0"
                }
            ]
        },
        {
            "name" : "com.ekonomikas.merkato",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/sheep-farm/merkato.git",
                    "tag" : "v0.2.0"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
